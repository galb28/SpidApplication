<?xml version='1.0' encoding='utf-8'?>
<widget id="io.hermes.spid" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ספיד</name>
    <description>
        * מישהו צריך להזכיר לי לשנות את זה *
    </description>

    <author email="eyal@godovich.com">
        Hermes team
    </author>

    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />

    <!-- Intents !-->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Android !-->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <!-- iOS !-->
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


    <!-- Status bar color !-->
    <preference name="StatusBarBackgroundColor" value="#0061a9" />

    <!-- Splash screen !-->
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenBackgroundColor" value="#0084e7" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="false"/>

    <!-- Icon !-->
    <icon src="www/res/img/icon.png" />

</widget>
